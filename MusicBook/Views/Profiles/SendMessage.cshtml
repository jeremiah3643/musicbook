@model MusicBook.Models.ViewModels.SendMessageViewModel

@{
    ViewData["Title"] = "SendMessage";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SendMessage</title>
</head>
<body>

    <h4>Message</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SendMessage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Message.Subject" class="control-label"></label>
                    <input asp-for="Message.Subject" class="form-control" />
                    <span asp-validation-for="Message.Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message.MessageBody" class="control-label"></label>
                    <input asp-for="Message.MessageBody" class="form-control" />
                    <span asp-validation-for="Message.MessageBody" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="SendMessage" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
